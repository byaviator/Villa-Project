@model List<VillaModel>
<div class="bg-secondary text-center rounded p-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h6 class="mb-0">Recent Salse</h6>
        <a href="">Show All</a>
    </div>
    <div class="table-responsive">
        <table class="table text-start align-middle table-bordered table-hover mb-0">
            <thead>
                <tr class="text-white">
                    <th scope="col"><input class="form-check-input" type="checkbox"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">Price</th>
                    <th scope="col">Bedrooms</th>
                    <th scope="col">Bathrooms</th>
                    <th scope="col">Area</th>
                    <th scope="col">Floor</th>
                    <th scope="col">Parking</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if(Model is not null)
                    {
                        foreach(VillaModel villaModel in Model)
                        {
                            <tr>
                                <td><input class="form-check-input" type="checkbox"></td>
                                <td>@villaModel.Id</td>
                                <td>@villaModel.Name</td>
                                <td>@villaModel.Address</td>
                                <td>@villaModel.Price</td>
                                <td>@villaModel.Bedrooms</td>
                                <td>@villaModel.Bathrooms</td>
                                <td>@villaModel.Area</td>
                                <td>@villaModel.Floor</td>
                                <td>@villaModel.Parking</td>
                                <td>@villaModel.Bathrooms</td>
                                <td><img src="~/assets/UploadedImages/@villaModel.ImgPath" alt="Alternate Text" /></td>
                                <td><a class="btn btn-sm btn-primary" href="">Detail</a></td>
                                <td></td>
                                <td></td>

                            </tr>

                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>